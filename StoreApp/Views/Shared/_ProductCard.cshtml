@model Product

<div class="col-sm-12 col-md-4 my-2">
    <div class="card" style="width: 18rem; height: 24rem;">
        <img src="@Model?.ImageUrl" class="card-img-top" style="height: 16rem; object-fit: contain;" alt="...">
        <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Summary</p>
            <div class="d-flex justify-content-end mt-auto">
                <div class="btn-group">
                    <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@Model.ProductId" class="btn btn-primary"><i
                            class="fa-solid fa-arrow-right"></i> Details</a>
                    <form id="@Model.ProductId" asp-page="/Cart" method="post" class="btn btn-outline-primary" onclick="document.getElementById('@Model.ProductId').submit();">
                        <input type="hidden" asp-for="ProductId">
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
                        <i class="fa fa-cart-plus"></i> @Model.Price.ToString("C")
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
