<div class="my-3">
    <h6 class="lead"><i class="fa fa-filter text-secondary"></i> Filters</h6>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])">
        <div class="form-group my-2" style="display: flex; align-items: center;">
            <input class="form-control" type="text" name="SearchTerm" placeholder="Search"
                style="border-radius: 5px 0 0 5px; border-right: 0; box-shadow: none; flex: 1;">
            <button class="btn btn-primary" style="border-radius: 0 5px 5px 0;">
                <i class="fa fa-search"></i>
            </button>
        </div>
        <div class="form-group my-2 d-flex align-items-center">
            <input class="form-control" type="text" name="MinPrice" placeholder="Min. Price">
            <span class="mx-1">-</span>
            <input class="form-control" type="text" name="MaxPrice" placeholder="Max. Price">
            <button class="btn btn-primary mx-1">Apply</button>
        </div>
    </form>
</div>