@model RegisterDto

<div class="text-center my-5">
    <h6 class="display-6">
        <i class="fa-solid fa-user-plus text-white bg-secondary p-3 rounded"></i><br>Register
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Register">
            <div class="form-group row my-3">
                <label asp-for="UserName" class="col-form-label col-sm-2">Username:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="UserName">
                </div>
            </div>
            <div class="form-group row my-3">
                <label asp-for="Email" class="col-form-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Email">
                </div>
            </div>
            <div class="form-group row my-3">
                <label asp-for="Password" class="col-form-label col-sm-2">Password:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="password" asp-for="Password">
                </div>
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-user-plus"></i> Register
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
