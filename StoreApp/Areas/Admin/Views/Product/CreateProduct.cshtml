@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create Product</div>
</div>

<form method="post" asp-action="CreateProduct" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.categories" asp-for="CategoryId">
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summary" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control"/>
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
            <a class="btn btn-outline-primary" asp-action="Index"><i class="fa fa-list"></i> Products</a>
        </div>
    </div>
</form>