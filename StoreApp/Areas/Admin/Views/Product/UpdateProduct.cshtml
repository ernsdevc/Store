@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update Product</div>
</div>

<form method="post" asp-action="UpdateProduct" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId">
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.categories" asp-for="CategoryId">
        </select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" placeholder="Summary" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price" />
    </div>
    <div class="form-group my-3">
        <div class="form-check form-switch">
            <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch"
                id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
        </div>
    </div>
    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl" alt="">
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Update</button>
            <a class="btn btn-outline-primary" asp-action="Index"><i class="fa fa-list"></i> Products</a>
        </div>
    </div>
</form>