@model ResetPasswordDto

<div class="text-center my-5">
    <h6 class="display-6">Reset Password: (@Model.UserName)</h6>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="UserName">
    <div class="form-group my-3">
        <label asp-for="Password">Password:</label>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword">Confirm Password:</label>
        <input class="form-control" asp-for="ConfirmPassword">
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-key"></i> Update</button>
        <a class="btn btn-outline-primary" asp-action="Index"><i class="fa fa-users"></i> Users</a>
    </div>
</form>