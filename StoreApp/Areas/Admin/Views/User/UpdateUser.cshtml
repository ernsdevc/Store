@model UserDtoForUpdate

<div class="text-center my-5">
    <h6 class="display-6">Update User: (@Model.UserName)</h6>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="UpdateUser">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="UserName">Username:</label>
                <input class="form-control" type="text" asp-for="UserName">
            </div>
            <div class="form-group my-3">
                <label asp-for="Email">Email:</label>
                <input class="form-control" type="text" asp-for="Email">
            </div>
            <div class="form-group my-3">
                <label asp-for="PhoneNumber">Phone Number:</label>
                <input class="form-control" type="text" asp-for="PhoneNumber">
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary">
                    <a asp-action="Index" class="btn btn-outline-primary"><i class="fa fa-arrow-left"></i> Back</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                Roles
                @foreach (var role in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" name="Roles" value="@role" class="from-check-input" checked="@Model.UserRoles.Contains(@role)">
                        <label class="from-check-label">@role</label>
                    </div>
                }
            </div>
            <div class="text-muted">
                Please choose the roles for the user.
            </div>
        </div>
    </div>
</form>