<nav class="navbar navbar-dark bg-dark border-bottom navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand text-white" href="#">Admin</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
          <a class="nav-link" id="dashboard-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="products-link" asp-controller="Product" asp-action="Index">Products (@await Component.InvokeAsync("ProductSummary"))</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="categories-link" asp-controller="Category"
            asp-action="Index">Categories</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="orders-link" asp-controller="Order"
            asp-action="Index">Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="roles-link" asp-controller="Role"
            asp-action="Index">Roles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="users-link" asp-controller="User"
            asp-action="Index">Users</a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a target="_blank" class="nav-link" id="home-link" asp-area="" asp-controller="Home"
            asp-action="Index"><i class="fa fa-search"></i> Web</a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" id="home-link" asp-area="" asp-controller="Account"
            asp-action="Logout"><i class="fa fa-right-from-bracket"></i> Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const currentUrl = window.location.pathname;
    const links = document.querySelectorAll('.nav-link');

    // Remove 'text-white' from all links
    links.forEach(link => link.classList.remove('text-white'));
    links.forEach(link => link.classList.add('text-gray'));

    // Add 'active' to the matching link
    if (currentUrl === "/admin") {
      document.getElementById('dashboard-link').classList.remove('text-gray');
      document.getElementById('dashboard-link').classList.add('text-white');
    } else if (currentUrl.includes("product")) {
      document.getElementById('products-link').classList.remove('text-gray');
      document.getElementById('products-link').classList.add('text-white');
    } else if (currentUrl.includes("category")) {
      document.getElementById('categories-link').classList.remove('text-gray');
      document.getElementById('categories-link').classList.add('text-white');
    } else if (currentUrl.includes("order")) {
      document.getElementById('orders-link').classList.remove('text-gray');
      document.getElementById('orders-link').classList.add('text-white');
    } else if (currentUrl.includes("role")) {
      document.getElementById('roles-link').classList.remove('text-gray');
      document.getElementById('roles-link').classList.add('text-white');
    } else if (currentUrl.includes("user")) {
      document.getElementById('users-link').classList.remove('text-gray');
      document.getElementById('users-link').classList.add('text-white');
    }
  });
</script>